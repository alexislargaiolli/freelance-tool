{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src/",
    "paths": {
      "@common/*": [
        "common/*"
      ],
      "@auth/*": [
        "auth/*"
      ],
      "@users/*": [
        "users/*"
      ],
      "@companies/*": [
        "companies/*"
      ],
      "@customers/*": [
        "customers/*"
      ],
      "@invoice/*": [
        "invoice/*"
      ],
      "@quotation/*": [
        "quotation/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}